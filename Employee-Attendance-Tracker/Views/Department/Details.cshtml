@model Employee_Attendance_Tracker.Models.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Department Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-building"></i> Department Details</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <span class="badge bg-light text-dark me-2">@Model.Code</span>
                        @Model.Name
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-info-circle text-primary"></i> Department Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Department Code:</strong></td>
                                    <td><span class="badge bg-primary">@Model.Code</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Department Name:</strong></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Location:</strong></td>
                                    <td><i class="fas fa-map-marker-alt text-muted"></i> @Model.Location</td>
                                </tr>
                                <tr>
                                    <td><strong>Total Employees:</strong></td>
                                    <td><span class="badge bg-info">@Model.EmployeeCount</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-chart-bar text-success"></i> Statistics</h5>
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="text-primary">@Model.EmployeeCount</h3>
                                    <p class="text-muted mb-0">Total Employees</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Department
                        </a>
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-info">
                            <i class="fas fa-users"></i> View Employees
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Department
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>