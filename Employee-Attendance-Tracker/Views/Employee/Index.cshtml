@model IEnumerable<Employee_Attendance_Tracker.Models.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Employees</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Employee
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Employee Code</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Attendance Summary</th>
                                        <th width="200">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-dark">@employee.EmployeeCode</span>
                                            </td>
                                            <td>
                                                <strong>@employee.FullName</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope text-muted"></i> @employee.Email
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@employee.DepartmentName</span>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <small class="text-muted">This Month:</small>
                                                    <div>
                                                        <span class="badge bg-success me-1">P: @employee.PresentDays</span>
                                                        <span class="badge bg-danger me-1">A: @employee.AbsentDays</span>
                                                        <span class="badge bg-info">@employee.AttendancePercentage%</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@employee.Id"
                                                       class="btn btn-outline-info btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@employee.Id"
                                                       class="btn btn-outline-warning btn-sm" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-controller="Attendance" asp-action="Index" asp-route-employeeId="@employee.Id"
                                                       class="btn btn-outline-success btn-sm" title="View Attendance">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@employee.Id"
                                                       class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Employees Found</h4>
                            <p class="text-muted">Start building your team by adding employees.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Add Employee
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>