@model Employee_Attendance_Tracker.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Employee</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card shadow border-danger">
                        <div class="card-header bg-danger text-white">
                            <h4 class="mb-0">
                                <i class="fas fa-exclamation-triangle"></i>
                                Confirm Employee Deletion
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Warning!</strong> This action cannot be undone. All attendance records for this employee will also be deleted.
                            </div>

                            <h5>Are you sure you want to delete this employee?</h5>

                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-user text-primary"></i> Employee Information</h6>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Employee Code:</strong></td>
                                            <td><span class="badge bg-dark">@Model.EmployeeCode</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Full Name:</strong></td>
                                            <td>@Model.FullName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Email:</strong></td>
                                            <td><i class="fas fa-envelope text-muted"></i> @Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Department:</strong></td>
                                            <td><span class="badge bg-primary">@Model.DepartmentName</span></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-chart-bar text-info"></i> Attendance Summary (This Month)</h6>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="card bg-success text-white">
                                                <div class="card-body p-2">
                                                    <h5 class="mb-0">@Model.PresentDays</h5>
                                                    <small>Present</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="card bg-danger text-white">
                                                <div class="card-body p-2">
                                                    <h5 class="mb-0">@Model.AbsentDays</h5>
                                                    <small>Absent</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="card bg-info text-white">
                                                <div class="card-body p-2">
                                                    <h5 class="mb-0">@Model.AttendancePercentage%</h5>
                                                    <small>Rate</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @{
                                        var totalAttendanceRecords = Model.PresentDays + Model.AbsentDays;
                                    }

                                    @if (totalAttendanceRecords > 0)
                                    {
                                        <div class="alert alert-warning mt-3">
                                            <i class="fas fa-calendar-times"></i>
                                            <strong>@totalAttendanceRecords</strong> attendance record(s) will also be deleted permanently.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mt-3">
                                            <i class="fas fa-info-circle"></i>
                                            No attendance records found for this employee.
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input asp-for="Id" type="hidden" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this employee and all their attendance records?')">
                                        <i class="fas fa-trash"></i> Yes, Delete Employee
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>