@model Employee_Attendance_Tracker.Models.ViewModels.AttendanceViewModel

@{
    ViewData["Title"] = "Mark Attendance";
}

<h2>Mark Attendance</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="EmployeeId" class="form-label"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="Model.Employees"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="date" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsPresent" class="form-check-input" />
        <label asp-for="IsPresent" class="form-check-label">Present</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
