@model IEnumerable<Employee_Attendance_Tracker.Models.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Employee</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Present</th>
            <th>Absent</th>
            <th>%</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeCode</td>
                <td>@emp.FullName</td>
                <td>@emp.Email</td>
                <td>@emp.DepartmentName</td>
                <td>@emp.Presents</td>
                <td>@emp.Absents</td>
                <td>@emp.AttendancePercentage%</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>