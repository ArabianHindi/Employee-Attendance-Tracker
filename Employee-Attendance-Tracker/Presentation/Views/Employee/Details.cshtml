@model Employee_Attendance_Tracker.Models.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <strong>Code:</strong> @Model.EmployeeCode
</div>
<div class="mb-3">
    <strong>Full Name:</strong> @Model.FullName
</div>
<div class="mb-3">
    <strong>Email:</strong> @Model.Email
</div>
<div class="mb-3">
    <strong>Department:</strong> @Model.DepartmentName
</div>
<div class="mb-3">
    <strong>Present Days:</strong> @Model.Presents
</div>
<div class="mb-3">
    <strong>Absent Days:</strong> @Model.Absents
</div>
<div class="mb-3">
    <strong>Attendance %:</strong> @Model.AttendancePercentage%
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>